
@model IEnumerable<Website_BanDienThoai_Version1.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h3 class="align-text-bottom"> Category List</h3>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus-circle"></i> New Category</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped boder">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>

                <td style="width:100px">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-list-alt"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>

                    </div>
                </td>
            </tr>

        }
    </table>
</div>


