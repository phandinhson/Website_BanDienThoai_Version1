@model Website_BanDienThoai_Version1.Models.ViewModel.ProductViewModel
@using Website_BanDienThoai_Version1.Extentions
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">
    Product Details
</h2>

<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Name"readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Memory"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Memory" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Quantity"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Quantity" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Capacity"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Capacity" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Manufacturer"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Manufacturer" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Color"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Color" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Price" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Category"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Category.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.SpecialTag.Name" readonly class="form-control" />
            </div>
        </div>
    </div>

    <div class="col-1">
    </div>
    <div class="col-3">
        <img src="@Model.Products.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Products.Id" value="Edit">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>